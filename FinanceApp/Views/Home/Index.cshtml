@{
    ViewData["Title"] = "Home Page";
}

<div class="login-container d-flex flex-column align-items-center justify-content-center text-center">

    <h1 class="z-2 text-white mb-5" style="text-shadow: 2px 2px 8px rgba(0,0,0,0.7);">
        Finance App: Expenses Tracker
    </h1>

    <!-- Card -->
    <div class="card text-center p-4"
         style="min-width: 300px; z-index: 2; box-shadow: 0px 4px 15px rgba(0,0,0,0.5);">
        <h1 class="display-4 mb-4">Login</h1>
        <a asp-controller="Expenses" class="btn btn-primary btn-lg">Enter</a>
    </div>
</div>

<style>
    .login-container {
        min-height: 100vh;
        width: 100vw;
        height: 100vh;
        margin: 0;
        padding: 0;
        position: fixed;
        top: 0;
        left: 0;
        z-index: 1;
    }

    .login-container::before {
        content: "";
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: url('/assets/loginimage.jpg') no-repeat center center fixed;
        background-size: cover;
        filter: blur(1px);
        z-index: 1;
    }
</style>
